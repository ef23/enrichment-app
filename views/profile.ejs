<!doctype html>
<html>
<head>
    <title>Profile</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
	<div class="container">
		<div class="col-md-offset-2 col-md-8">
			<% if (name === null) { %>
			<h1>Hi, <%= email %></h1>
			<% } else { %>
			<h1> Hi, <%= name %></h1>
			<% } %>
			<ul> 
				<li><a href='/profile/create'> Create a new question </a></li>
			</ul>
		</div>
	</div>
</body>
</html>